@model UCRMS_MVC.Models.Department
@{
    Layout = null;
    string message = ViewBag.message;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>UCRMS</title>
    <meta name="description" content="A description of your website">
    <meta name="keywords" content="keyword1, keyword2, keyword3">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <style>
        .ErrorMessage {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>

    <div id="wrapper">

        <div id="header">

            <div class="banner_img">
                <h1>University Course and Result Management System </h1>
            </div>

        </div>

        <div class="navigation navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Department", "Index", "Department")</li>
                <li>@Html.ActionLink("Course", "Index", "Course")</li>
                <li>@Html.ActionLink("Teacher", "Index", "Teacher")</li>
                <li>@Html.ActionLink("Student", "Index", "Student")</li>
                <li>@Html.ActionLink("Enroll Course", "Enroll", "Enroll")</li>
                <li>@Html.ActionLink("Allocate Rooms", "Index", "AllocateClassRoom")</li>
            </ul>
        </div>

        
        <div id="page_content">
            @using (Html.BeginForm())
            { 
                <form>
                    <fieldset>
                        <legend><h3>Save Department:</h3></legend>
                        <br/>
                        <table>
                            <tr>
                                <td>
                                    @Html.LabelFor(x=>x.DeptCode)
                                </td>
                                <td>
                                    @Html.TextBoxFor(x=>x.DeptCode)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(x => x.DeptCode)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   @Html.LabelFor(d=>d.DeptName)
                                </td>
                                <td>
                                    @Html.TextBoxFor(d=>d.DeptName)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.DeptName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="submit" value="Save"/>
                                    <label for="message" class=".message"></label>
                                   
                                    @if (message == "Information Saved")
                                    {
                                        <style>
                                            .message {
                                                color: green;
                                                font-style: italic;
                                            }
                                        </style>
                                    }
                                    else
                                    {
                                        <style>
                                            .message {
                                                color: red;
                                                font-style: italic;
                                            }
                                        </style>
                                    }
                                   @message
                                </td>
                            <tr>
                                <td>
                                    @Html.ActionLink("Back", "Index", "Department")
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                </form>
            }
            <div class="clear"></div>
            <!--start footer from here-->
            <div id="footer">

            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
