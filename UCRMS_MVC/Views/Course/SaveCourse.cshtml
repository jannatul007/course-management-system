@using UCRMS_MVC.Models
@model UCRMS_MVC.Models.Course
@{
    Layout = null;
    List<Department> aDepartments = ViewBag.aDepartments;
    List<Semester> aSemesters = ViewBag.aSemesters;
    string message = ViewBag.message;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>UCRMS</title>
    <meta name="description" content="A description of your website">
    <meta name="keywords" content="keyword1, keyword2, keyword3">
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <style>
        .ErrorMessage {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>

    <div id="wrapper">

        <div id="header">

            <div class="banner_img">
                <h1>University Course and Result Management System </h1>
            </div>

        </div>

        <div class="navigation navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Department", "Index", "Department")</li>
                <li>@Html.ActionLink("Course", "Index", "Course")</li>
                <li>@Html.ActionLink("Teacher", "Index", "Teacher")</li>
                <li>@Html.ActionLink("Student", "Index", "Student")</li>
                <li>@Html.ActionLink("Enroll Course", "Enroll", "Enroll")</li>
                <li>@Html.ActionLink("Allocate Rooms", "Index", "AllocateClassRoom")</li>
            </ul>
        </div>

        
        <div id="page_content">
            @using (Html.BeginForm())
            {
                <form>
                    <fieldset>
                        <legend><h3>Save Course:</h3></legend>
                        <br />
                        <table>
                            <tr>
                                <td>
                                    @Html.LabelFor(x => x.CourseCode)
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => x.CourseCode)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(x => x.CourseCode)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.CourseName)
                                </td>
                                <td>
                                    @Html.TextBoxFor(d => d.CourseName)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.CourseName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.CourseCredit)
                                </td>
                                <td>
                                    @Html.TextBoxFor(d => d.CourseCredit)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.CourseCredit)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.Description)
                                </td>
                                <td>
                                    @Html.TextAreaFor(d => d.Description)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.Description)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.DeptId)
                                </td>
                                <td>
                                    <select name="DeptId" id="DeptId">
                                        <option value="">
                                            --Select One--  
                                        </option>
                                        @foreach (Department department in aDepartments)
                                        {
                                            <option value="@department.DeptId">@department.DeptCode</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(d=>d.SemesterId)</td>
                                <td>
                                    <select name="SemesterId" id="SemesterId">
                                        <option value=""> --Select One--</option>
                                        @foreach (Semester semester in aSemesters)
                                        {
                                            <option value="@semester.SemesterId">@semester.SemesterName</option>
                                        }
                                    </select>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <input type="submit" value="Save" />
                                    <label for="message" class=".message"></label>
                                    @message
                                </td>
                            </table>
                    </fieldset>
                </form>
            }
            <div class="clear"></div>

            <!--start footer from here-->
            <div id="footer">

            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
