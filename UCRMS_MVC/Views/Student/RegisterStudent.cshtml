@using UCRMS_MVC.Models
@model UCRMS_MVC.Models.Student
@{
    Layout = null;
    List<Department> aDepartments = ViewBag.aDepartments;
    string message = ViewBag.message;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>UCRMS</title>
    <meta name="description" content="A description of your website">
    <meta name="keywords" content="keyword1, keyword2, keyword3">
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/datepicker3.css" rel="stylesheet" />
    <style>
        .ErrorMessage {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>

    <div id="wrapper">

        <div id="header">

            <div class="banner_img">
                <h1>University Course and Result Management System </h1>
            </div>

        </div>

        <div class="navigation navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Department", "Index", "Department")</li>
                <li>@Html.ActionLink("Course", "Index", "Course")</li>
                <li>@Html.ActionLink("Teacher", "Index", "Teacher")</li>
                <li>@Html.ActionLink("Student", "Index", "Student")</li>
                <li>@Html.ActionLink("Enroll Course", "Enroll", "Enroll")</li>
                <li>@Html.ActionLink("Allocate Rooms", "Index", "AllocateClassRoom")</li>
            </ul>
        </div>

       
        <div id="page_content">
            @using (Html.BeginForm())
            {
                <form>
                    <fieldset>
                        <legend><h3>Save Student Registration:</h3></legend>
                        <br />
                        <table>
                            <tr>
                                <td>
                                    @Html.LabelFor(x => x.StudentName)
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => x.StudentName)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(x => x.StudentName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.StudentEmail)
                                </td>
                                <td>
                                    @Html.TextBoxFor(d => d.StudentEmail)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.StudentEmail)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.ContactNo)
                                </td>
                                <td>
                                    @Html.TextBoxFor(d => d.ContactNo)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.ContactNo)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.Date)
                                </td>
                                <td>
                                    @Html.EditorFor(d => d.Date, new{ id = "news_date" })
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.Date)
                                </td>
                            </tr>
                           
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.Address)
                                </td>
                                <td>
                                    @Html.TextAreaFor(d => d.Address)
                                </td>
                                <td class="ErrorMessage">
                                    @Html.ValidationMessageFor(d => d.Address)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(d => d.DeptId)
                                </td>
                                <td>
                                    <select name="DeptId" id="DeptId">
                                        <option value="">
                                            --Select One--
                                        </option>
                                        @foreach (Department department in aDepartments)
                                        {
                                            <option value="@department.DeptId">@department.DeptCode</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="submit" value="Register" />
                                    @*<label for="message" class=".message"></label>*@
                                    @message
                                </td>
                        </table>
                    </fieldset>
                </form>
            }
            <div class="clear"></div>

            <!--start footer from here-->
            <div id="footer">

            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#news_date").datepicker({ dateFormat: 'dd/mm/yy' });
        });
    </script>
</body>
</html>
